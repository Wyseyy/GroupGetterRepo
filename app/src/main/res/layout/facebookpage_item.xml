<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/facebookImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:contentDescription="Profile Picture"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="14dp"/>

    <TextView
        android:id="@+id/facebookPage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Page Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/facebookImage"
        app:layout_constraintTop_toTopOf="@id/facebookImage"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/facebookCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Keyword"
        android:textSize="14sp"
        android:textColor="#666"
        app:layout_constraintTop_toBottomOf="@id/facebookPage"
        app:layout_constraintStart_toStartOf="@id/facebookPage"
        app:layout_constraintEnd_toEndOf="@id/facebookPage"/>

</androidx.constraintlayout.widget.ConstraintLayout>